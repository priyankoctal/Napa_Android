<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:id="@+id/ll_location_search">

    <TextView
        android:id="@+id/txt_hospital_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brooklyn Hospital"
        android:textColor="@color/lightblack"
        android:textSize="@dimen/_13sdp"
        android:layout_toLeftOf="@+id/checkbox_system"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_5sdp"/>


    <CheckBox
        android:id="@+id/checkbox_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/checkbox_select"
        android:checked="false"
        android:paddingLeft="@dimen/_5sdp"
        android:textColor="@color/login_blue_color"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />




</RelativeLayout>