<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/whitecolor">

<RelativeLayout
    android:id="@+id/rr_charge_section"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp">

    <com.octalsoftaware.archi.utils.CustomTexViewBold
        android:id="@+id/txt_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blackcolor"
        android:textSize="@dimen/_13sdp"
        android:gravity="left"
        android:text="gg"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_centerVertical="true" />


    <TextView
        android:id="@+id/txt_doctorname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/login_blue_color"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img_arrow"
        android:layout_toRightOf="@+id/txt_department"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:gravity="right" />



    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />




</RelativeLayout>
    <TextView
        android:id="@+id/txt_below_diagnosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:textColor="@color/login_blue_color"
        android:textSize="@dimen/_12sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:visibility="gone" />
</LinearLayout>